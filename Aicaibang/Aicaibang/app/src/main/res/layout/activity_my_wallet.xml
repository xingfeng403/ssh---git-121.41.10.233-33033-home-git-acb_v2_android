<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_f6"
    tools:context="com.youtu.acb.activity.MyWalletActivity">

    <RelativeLayout
        android:id="@+id/my_wallet_titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/titleblue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的钱包"
            android:textColor="@android:color/white"
            android:textSize="16dp" />


        <FrameLayout
            android:id="@+id/my_wallet_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_back_white" />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/go_to_my_avail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/my_wallet_available_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.15"
                android:layout_marginRight="5dp"
                android:textColor="#fe9d98"
                android:textSize="15dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#b4b6bb"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/arrow_right_grey" />


        </LinearLayout>

        <View
            style="@style/DividerGrey" />


        <LinearLayout
            android:id="@+id/go_to_mygold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/my_wallet_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:layout_marginRight="5dp"
                android:textColor="#fe9d98"
                android:textSize="15dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="枚"
                android:textColor="#b4b6bb"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/arrow_right_grey" />


        </LinearLayout>

        <View
            style="@style/DividerGrey" />

        <LinearLayout
            android:id="@+id/go_to_my_bond"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风险保证金"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/my_wallet_bond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginRight="5dp"
                android:textColor="#fe9d98"
                android:textSize="15dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#b4b6bb"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/arrow_right_grey" />


        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/DividerGrey" />

    <TextView
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付信息"
        android:textSize="14dp"
        android:textColor="#c1c2c7"/>

    <View
        style="@style/DividerGrey" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/go_to_wx_pay"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/my_wallet_wechat"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#b4b6bb"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/arrow_right_grey" />
        </LinearLayout>

        <View
            style="@style/DividerGrey" />

        <LinearLayout
            android:id="@+id/go_to_my_cards"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/my_wallet_bankcard_num"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0张"
                android:textColor="#b4b6bb"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/arrow_right_grey" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/DividerGrey" />



</LinearLayout>
