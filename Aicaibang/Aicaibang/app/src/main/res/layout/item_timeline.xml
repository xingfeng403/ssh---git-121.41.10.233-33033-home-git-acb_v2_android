<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_tl_headpart"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.youtu.acb.Views.CircleImageView
            android:id="@+id/item_tl_avatar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            app:border_width="2px" />

        <TextView
            android:id="@+id/item_tl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="乐纯"
            android:textColor="#aeafb2"
            android:textSize="15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/item_tl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="刚刚"
            android:textColor="#d5d6da"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_tl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="10dp"
        android:text="猴塞雷，投了1000，拿了50块钱的返现，还有平台36元红包，加收益都有100多了，哈哈哈，爽歪歪！"
        android:textColor="#8d8e94"
        android:textSize="15dp" />

    <GridView
        android:id="@+id/item_tl_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:cacheColorHint="@android:color/transparent"
        android:horizontalSpacing="15dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/item_tl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

    </LinearLayout>

    <View
        style="@style/DividerGrey"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_tl_zan_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_tl_zan"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/timeline_weizan" />

            <TextView
                android:id="@+id/item_tl_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#7b7b7b"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#e8e6e5" />

        <LinearLayout
            android:id="@+id/item_tl_comment_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mis_cpl_tips" />

            <TextView
                android:id="@+id/item_tl_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#7b7b7b"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#e8e6e5" />

        <LinearLayout
            android:id="@+id/item_tl_share_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mis_cpl_pots" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/DividerGrey" />

</LinearLayout>