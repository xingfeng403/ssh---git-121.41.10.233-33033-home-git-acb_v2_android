<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <com.youtu.acb.Views.CircleImageView
        android:id="@+id/rec_item_icon"
        android:layout_marginLeft="16dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_marginLeft="9dp"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rec_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#61636b"
            android:text=""/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/rec_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#bcbdc3"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/rec_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aeafb2"
        android:textSize="14dp"
        android:text="" />

</LinearLayout>