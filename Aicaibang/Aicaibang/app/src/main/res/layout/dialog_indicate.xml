<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#99000000"
    android:id="@+id/root_view"
    android:layout_height="match_parent">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/layout_dialog_content" />

    <ImageView
        android:id="@+id/jiyibi_line"
        android:layout_below="@+id/content_layout"
        android:layout_alignRight="@+id/content_layout"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:src="@drawable/jiyibi_wind_line" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/jiyibi_line"
        android:layout_toRightOf="@+id/jiyibi_line"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-18dp"
        android:src="@drawable/jiyibi_btn" />

</RelativeLayout>