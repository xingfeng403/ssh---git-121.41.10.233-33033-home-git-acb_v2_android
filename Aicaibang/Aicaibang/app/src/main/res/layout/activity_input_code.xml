<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_f6"
    tools:context="com.youtu.acb.activity.LoginActivity">

    <com.youtu.acb.Views.Titlebar
        android:id="@+id/input_code_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/DividerGrey"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.youtu.acb.Views.InputControlView
            android:id="@+id/input_code_input_code"
            android:layout_marginLeft="16dp"
            app:type="4"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/input_code_get_code"
            android:text="@string/get_check_code"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_button_grey"
            android:textColor="@color/grey_b7"
            android:textSize="14dp" />

    </LinearLayout>

    <View style="@style/DividerGrey" />

    <Button
        android:id="@+id/input_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_button_grey"
        android:text="@string/next_step"
        android:textColor="@color/grey_b7"
        android:textSize="14dp" />

</LinearLayout>

