<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.youtu.acb.activity.FeedbackActivity">

    <com.youtu.acb.Views.Titlebar
        android:id="@+id/feedback_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.youtu.acb.Views.Titlebar>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white_text"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="330dp">

        <EditText
            android:id="@+id/feedback_content"
            android:textColor="@color/black333"
            android:textSize="14dp"
            android:hint="请输入你要反馈的信息"
            android:background="@null"
            android:textColorHint="@color/grey_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"/>

    </LinearLayout>

    <View
        style="@style/DividerGrey" />

    <Button
        android:id="@+id/feedback_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/sel_blue_btn"
        android:text="@string/submit"
        android:textColor="@color/white_text"
        android:textSize="14dp" />

</LinearLayout>
