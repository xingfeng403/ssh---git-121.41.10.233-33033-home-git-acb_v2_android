<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_bg"
    android:minHeight="110dp">

    <ImageView
        android:id="@+id/bank_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bank_icon"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/bank_icon"
        android:text=""
        android:textColor="#515562"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/bank_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bank_name"
        android:layout_below="@+id/bank_name"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#515562"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/bank_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bank_card_type"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="#797c86"
        android:textSize="20dp" />
</RelativeLayout>